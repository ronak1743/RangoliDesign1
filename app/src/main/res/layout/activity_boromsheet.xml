<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".boromsheet">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="DEVELOPER CONTECT"
        android:layout_margin="@dimen/_10sdp"
        android:gravity="center"
        tools:ignore="MissingConstraints">

    </TextView>
    <View
        android:background="@color/black"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"></View>
    <androidx.cardview.widget.CardView

        android:layout_width="match_parent"
        android:foregroundGravity="center"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        tools:ignore="MissingClass">


        <LinearLayout
            android:orientation="vertical"
            android:layout_margin="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_margin="@dimen/_5sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/cinzel_decorative"
                android:text="NAME : Ronak Gondaliya"
                android:textStyle="bold"></TextView>


                <LinearLayout
                    android:layout_margin="@dimen/_5sdp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_margin="@dimen/_2sdp"
                        android:src="@drawable/gmaillogo"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        ></ImageView>
                    <TextView
                        android:layout_margin="@dimen/_2sdp"
                        android:layout_gravity="center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ronakgondaliya78@gmail.com"></TextView>
                </LinearLayout>

                <LinearLayout
                    android:layout_margin="@dimen/_5sdp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_margin="@dimen/_2sdp"
                        android:src="@drawable/instaicon"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        ></ImageView>
                    <TextView
                        android:layout_margin="@dimen/_2sdp"
                        android:layout_gravity="center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ronak_0987"></TextView>
                </LinearLayout>

                <LinearLayout
                    android:layout_margin="@dimen/_5sdp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_margin="@dimen/_2sdp"
                        android:src="@drawable/telelogo"
                        android:scaleType="centerInside"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        ></ImageView>
                    <TextView
                        android:layout_gravity="center_vertical"
                        android:layout_margin="@dimen/_2sdp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="\@ronakgondaliya"></TextView>
                </LinearLayout>


                <LinearLayout
                    android:layout_margin="@dimen/_5sdp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_margin="@dimen/_2sdp"
                        android:src="@drawable/linkedinlogo"
                        android:scaleType="centerInside"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        ></ImageView>
                    <TextView
                        android:layout_gravity="center_vertical"
                        android:layout_margin="@dimen/_2sdp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="https://www.linkedin.com/in/ronak-gondaliya"></TextView>
                </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>
    <View
        android:background="@color/black"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"></View>


</LinearLayout>